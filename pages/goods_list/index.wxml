<SearchInput></SearchInput>
<Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
    <block wx:if="{{tabs[0].isActive}}">
        <view class="first_tab">
            <navigator class="goods_item"
            wx:for="{{goodsList}}"
            wx:key="goods_id"
            url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
                <view class="goods_img_wrap">
                    <image
                        src="{{item.goods_img?item.goods_img:'https://img.imgdb.cn/item/606c1c6c8322e6675c9b1428.jpg'}}"
                        mode="widthFix"> 
                        </image>
                </view>
                <view class="goods_info_wrap">
                    <view class="goods_name">{{item.goods_name}}</view>
                    <view class="goods_price">Â¥ {{item.goods_price}}</view>
                </view>
            </navigator>
            
        </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}"></block>
    <block wx:elif="{{tabs[2].isActive}}"></block>
</Tabs>